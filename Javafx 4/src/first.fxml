<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="First" prefWidth="400.0" prefHeight="300.0">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Choose your pet:" />
        <RadioButton fx:id="catRadio" layoutX="30.0" layoutY="50.0" text="Cat" toggleGroup="$petToggleGroup" />
        <RadioButton fx:id="dogRadio" layoutX="30.0" layoutY="80.0" text="Dog" toggleGroup="$petToggleGroup" />
        <RadioButton fx:id="rabbitRadio" layoutX="30.0" layoutY="110.0" text="Rabbit" toggleGroup="$petToggleGroup" />
        <RadioButton fx:id="birdRadio" layoutX="30.0" layoutY="140.0" text="Bird" toggleGroup="$petToggleGroup" />
        <Label layoutX="200.0" layoutY="50.0" text="Enter your pet's name:" />
        <TextField fx:id="nameField" layoutX="200.0" layoutY="80.0" prefWidth="150.0" promptText="ex: Bunny" />
        <Button fx:id="chooseButton" layoutX="200.0" layoutY="120.0" mnemonicParsing="false" text="Choose Pet" onAction="#handlePetChoice" />
        <Label fx:id="resultLabel" layoutX="30.0" layoutY="200.0" prefWidth="350.0" wrapText="true" />
    </children>
</AnchorPane>